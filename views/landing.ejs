<!DOCTYPE html>
<html>

<head>
    <title>Castlepedia</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
</head>

<body>

    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
                <% if(success && success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
    </div>

    <div class="landing-header">
        <h1>Welcome to Castlepedia</h1>
        <a href="/castles" class="btn btn-lg btn-info btn__btn-view">View All Castles</a>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xs-8 col-xs-offset-2">
                    <form action="/castles" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" class="form-control" name="search" placeholder="Castle search...">
                            <input type="submit" class="btn btn-info" value="Search">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <ul class="slideshow">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>

    <% include partials/footer %>
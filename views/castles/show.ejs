<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2 class="lead">Castlepedia</h2>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img class="card-img-top" src="<%= castle.image%>" alt="Image of <%= castle.name%>">
                    <div class="card-body">
                        <h4 class="card-text float-right">â‚¬9.00/adult</h4>
                        <h1 class="card-title">
                            <a href="#">
                                <%= castle.name%>
                            </a>
                        </h1>
                        <p>
                            <%=castle.description%>
                        </p>
                        <p>
                            <em>Submitted by
                                <%=castle.author.username%>
                            </em>
                        </p>
                        <% if(currentUser && castle.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-sm btn-warning" href="/castles/<%=castle._id%>/edit">Edit</a>
                            <form class="delete-form" action="/castles/<%=castle._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                            <% } %>
                    </div>
                </div>
                <div class="card card-body bg-light">
                    <div class="text-right">
                        <a class="btn btn-success" href="/castles/<%=castle._id%>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% castle.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>
                                    <%= comment.author.username%>
                                </strong>
                                <span class="text-right">10 days ago</span>
                                <p>
                                    <%= comment.text%>
                                </p>
                                <a class="btn btn-sm btn-warning" href="/castles/<%=castle._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>



    <% include ../partials/footer %>
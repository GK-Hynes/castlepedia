<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div style="width:33%; margin: 2em auto;">
                <h1 style="text-align: center;">Edit <%=castle.name%></h1>
                <form action="/castles/<%=castle._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="castle[name]" value="<%=castle.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="castle[image]" value="<%=castle.image%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="castle[price]" value="<%=castle.price%>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="castle[description]" value="<%=castle.description%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/castles">Go Back</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>